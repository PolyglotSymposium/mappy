name:                mappy
version:             0.1.0.0
synopsis:            A functional programming language focused around maps.
description:         Please see README.md
homepage:            http://github.com/githubuser/mappy#readme
license:             BSD3
license-file:        LICENSE
author:              Michael Gilliland
maintainer:          mjg.py3@gmail.com
copyright:           2015 Michael Gilliland
category:            Programming Language
build-type:          Simple
data-dir:            prelude
data-files:          prelude.map
cabal-version:       >=1.10

library
  hs-source-dirs:      src
                     , src/Language
  exposed-modules:     Mappy
                     , Language.Ast
                     , Language.Desugar
                     , Language.Error
                     , Language.Executor
                     , Language.Parser
                     , Language.Primitives
                     , Language.Primitives.Io
                     , Language.Primitives.IoAble
                     , Language.Primitives.Map
  build-depends:       base >= 4.7 && < 5, parsec -any, containers -any
  default-language:    Haskell2010

executable mappy
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , mappy
                     , parsec -any
  default-language:    Haskell2010

test-suite mappy-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base, parsec -any, containers -any
                     , mappy
                     , hspec
                     , QuickCheck
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/mappy
